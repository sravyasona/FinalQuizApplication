<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <include layout="@layout/bar_layout"/>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:background="#FFF"
            android:orientation="vertical"
            android:id="@+id/categories">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ANIMATON_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/anim"
                    android:paddingTop="0dp"
                    android:text="ANIMATON"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>


                <Button
                    android:id="@+id/COMPUTER_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/comp"
                    android:paddingTop="0dp"
                    android:text="COMPUTER"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/TELEVISION"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableStart="@drawable/tvision"
                    android:paddingStart="40dp"
                    android:text="TELEVISION"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ART_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/art"
                    android:paddingTop="0dp"
                    android:text="ART"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>

                <Button
                    android:id="@+id/SPORTS_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/sports"
                    android:paddingTop="0dp"
                    android:text="SPORTS"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/POLITICS_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/poli"
                    android:paddingTop="40dp"
                    android:text="POLITICS"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>


                <Button
                    android:id="@+id/BOOKS_BTN"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/book"
                    android:paddingTop="25dp"
                    android:text="BOOKS"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ANIMALS_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableStart="@drawable/anim"
                    android:paddingStart="35dp"
                    android:text="ANIMALS"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/GAMES_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/games"
                    android:paddingTop="25dp"
                    android:text="GAMES"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:onClick="onCategorySelected"/>


                <Button
                    android:id="@+id/FILMS"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/films"
                    android:paddingTop="25dp"
                    android:text="FILMS"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/MUSIC_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableStart="@drawable/music"
                    android:paddingStart="35dp"
                    android:text="MUSIC"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/GENERAL_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/gk"
                    android:paddingTop="0dp"
                    android:text="GENERAL"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:onClick="onCategorySelected"/>


                <Button
                    android:id="@+id/MATHS_BTN"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/maths"
                    android:paddingTop="25dp"
                    android:text="MATHS"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:onClick="onCategorySelected"/>
            </LinearLayout>
        </LinearLayout>





    </ScrollView>


</LinearLayout>
